<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/welcome_image" />

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="700dp"
        android:maxHeight="350dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/reflecxity_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="어디서나 내 목소리로 외국어를.\n손쉬운 사용으로 간편하게."
        android:lineSpacingExtra="10dp"
        android:textAlignment="center"
        android:textColor="@color/grey900"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hapticFeedbackEnabled="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_newUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="3dp"
            android:text="처음 사용하시나요?"
            android:textAlignment="center"
            android:textColor="@color/grey900"
            android:textSize="16sp" />

        <Button
            android:id="@+id/newUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/btn_green"
            android:text="시작하기"
            android:textColor="@color/grey900"
            android:drawableLeft="@drawable/account"
            app:cornerRadius="100dp" />

        <TextView
            android:id="@+id/txt_User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="3dp"
            android:text="이미 사용자이신가요?"
            android:textAlignment="center"
            android:textColor="@color/grey900"
            android:textSize="16sp" />

        <Button
            android:id="@+id/readQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/btn_green"
            android:text="QR로 불러오기"
            android:textColor="@color/grey900"
            android:drawableLeft="@drawable/qr_icon_small"
            app:cornerRadius="100dp" />

    </LinearLayout>
</LinearLayout>